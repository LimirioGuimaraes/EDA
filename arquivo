#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "GeraABP.c"
// #include "CalcFatBal.c"

void imprime_menu ();

int main() {
    struct No *c = NULL;
    char nomeArquivo[20];
    int menu;

      do
           {
               imprime_menu ();
               scanf ("%d", &menu);
               system("cls || clear ");
               getchar();

               switch (menu)
                {
                case 1:
                    printf("Digite o nome do arquivo desejado: ");
                    scanf("%s", nomeArquivo);
                    c = GeraABP(c, nomeArquivo);
                    break;
                case 2:
                    // c = CalcFatBal(c);
                    break;
                case 3:
                    printf("cabeca: %d\n", c -> chave);
                    if(c -> pEsq == NULL){
                        printf("No da esquerda da cabeca = NULO!\n");
                    } else {
                        printf("No da Esquerda: %d\n", c -> pEsq -> chave);
                    }
                    if(c -> pDir == NULL){
                        printf("No da direita da cabeca = NULO!\n");
                    } else {
                        printf("No da Direita: %d\n", c -> pDir -> chave);
                    }
                    break;
                case 4:
                    free (c);
                    break;
                default:
                    printf ("Numero incorreto!!\7\n");
                }
            }
        while (menu != 4);
        return 0;
}

void imprime_menu ()
{
        printf("1. Gerar ABP\n");
        printf("2. Calcula Fator de Balanceamento\n");
        printf("3. Imprime ABP\n");
        printf("4. Sair\n");
        printf("Opção: ");

}
